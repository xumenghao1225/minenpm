{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			// 用于设置模块名到基于baseUrl的路径映射
			"@": ["packages/*"]
		},
		"lib": ["esnext", "dom", "dom.iterable", "scripthost"]
	}
}
